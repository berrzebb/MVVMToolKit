<UserControl
    x:Class="WithModuleSample.WithPopupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WithModuleSample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <Button Command="{Binding ShowPopupCommand}">
            팝업열기
        </Button>
        <Button Command="{Binding ClosePopupCommand}">
            팝업 닫기
        </Button>
        <Button Command="{Binding UpdateTitleWithMinimizedCommand}">
            타이틀 변경(최소화 있음)
        </Button>
        <Button Command="{Binding UpdateTitleCommand}">
            타이틀 변경
        </Button>
        <Button Command="{Binding DoActivateCommand}" Content="테스트" />
    </StackPanel>
</UserControl>
